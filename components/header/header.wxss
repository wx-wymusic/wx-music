/* 顶部信息 */
.header{
  width:750rpx;
  height:110rpx;
  background: #d33a32;
  position: fixed;
  top:0;
  left:0;  
}
.header-top{
  height:100%;
  width:100%;
  display:flex;
  justify-content: space-between;
  align-items: center;
}
/* 可点击的部分公用的样式 */
.header-click{
  width:56rpx;
  height:51rpx;
}
.header-click image{
  width:100%;
  height:100%;
}
/* 左侧的样式 */
.header-top-left{
  margin-left:27rpx;
}
.header-top-right{
  margin-right:27rpx;
}
.header-top-center{
  width:414rpx;
  height:100%;
  display:flex;
  justify-content:space-around;
  align-items: center;
}
.heade-icon{
  width:80rpx;
  height:80rpx;
}